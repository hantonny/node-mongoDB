{{> header}}

<div class='tags'>
  {{#tags}}
  <div class='tag {{class}}'><a href='/?t={{_id}}'>{{_id}}({{count}})</a></div>
  {{/tags}}
</div>

{{#posts}}
  <div class="post">
  {{#photo}}
  <img src="/media/{{photo}}" width="400">
  {{/photo}}
  <h3><a href="/post/{{slug}}">{{title}}</a></h3>
  <small>Autor: {{author.name}}</small>
  <p>{{body}}</small>
  {{#user}}
  <a href="/post/{{slug}}/edit" class="btn btn-primary">EDITAR</a>
  {{/user}}
  </div>
  
{{/posts}}